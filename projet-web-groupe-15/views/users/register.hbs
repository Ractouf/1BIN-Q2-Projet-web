<section id = "registerPage">
    <form id = "formRegister" method = "post" action = "/users/add" class = "fade-in from-left">
        <p class = "msgErr">{{error}}</p>

        <label for = "user_lastname"></label>
        <input name = "user_lastname" id = "user_lastname" placeholder = "Lastname" required>


        <label for = "user_firstname"></label>
        <input name = "user_firstname" id = "user_firstname" placeholder = "Firstname" required>


        <label for = "user_email"></label>
        <input type = "email" name = "user_email" id = "user_email" placeholder = "firstname.lastname@[student.]vinci.be" required>


        <label for = "user_pwd"></label>
        <input type = "password" name = "user_pwd" id = "user_pwd" placeholder = "Password" required>


        <label for = "user_cpwd"></label>
        <input type = "password" name = "user_cpwd" id = "user_cpwd" placeholder = "Confirm password" required>

        <input type = "submit" value = "Sign up"/>

        <small>By clicking Sign up, you agree to the terms of use.</small>
    </form>

    <section class = "fade-in" id = "right-register">
        <h1>Join the dev community !</h1>
        <p>By joining us, you can ask your question and share your knowledge to help thousands of developers around the world.</p>
    </section>
</section>